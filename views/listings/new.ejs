<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2 mb-3">
    <h3>create new listings</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label for="title" class="form-label">title</label>
        <input
          placeholder="Add a title"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="valid-feedback">title looks good</div>
        <div class="invalid-feedback">please enter valid title</div>
      </div>

      <div class="mb-2">
        <label for="description" class="form-label">description</label>
        <input
          placeholder="description"
          name="listing[description]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">please enter valid description</div>
      </div>

      <!-- file -->
      <div class="mb-2">
        <label for="image" class="form-label">Upload listing image</label>
        <input name="listing[image]" class="form-control" type="file" />
      </div>

      <div class="row">
        <div class="col-md-4 mb-2">
          <label for="price" class="form-label">price</label>
          <input
            placeholder="&#8377;1200"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter valid Price Amount</div>
        </div>

        <div class="col-md-8 mb-2">
          <label for="location" class="form-label">location</label>
          <input
            placeholder="khargone, M.P."
            name="listing[location]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter valid location</div>
        </div>
      </div>

      <div class="mb-2">
        <label for="country" class="form-label">country</label>
        <input
          placeholder="india"
          name="listing[country]"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">please enter valid country name</div>
      </div>
      <button class="btn btn-dark add-btn mt-4">Add</button>
    </form>
  </div>
</div>
